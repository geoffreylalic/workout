{
  "compilerOptions": {
    /* Output */
    "outDir": "./dist",
    "rootDir": "./",

    /* Language */
    "target": "ES2020",
    "module": "CommonJS",

    /* TS ergonomics */
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Node compatibility */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },

  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
